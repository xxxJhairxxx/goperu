---

import '@fontsource-variable/rubik';
import Container from '../globals/Container.astro';
//interface Props {menu: string;}

//const {menu} = Astro.props;
---
<Container>
<nav class="Navbar">
    <div class="logo">
        <img class="image" src="https://adelanteperu.com/wp-content/uploads/2023/07/logo-adp.svg" alt="">
    </div>
    <ul class="menu">
        <li>HOME</li>
        <li>ACERCA DE JULIO TOVAR</li>
        <li>EQUIPO</li>
        <li>IDEOLOGÍA</li>
        <li>NUESTRAS IDEAS</li>
        <li>SÚMATE</li>
        <li>CONTÁCTANOS</li>
    </ul>
</nav>
</Container>

<style>
	.Navbar {
		list-style: none;
		padding: calc(0.1rem * var(--scale));
        display: flex;
        font-size: calc(1.2rem * var(--scale));
        justify-content: space-between;
    }
    .menu{
        display: flex;
        flex-direction: row;
        list-style: none;
        color: white;
        font-weight: 500;
        height: fit-content;
         width: calc(82rem * var(--scale));
        padding: calc(1.5rem * var(--scale)) calc(2.5rem * var(--scale));
        background-color: #222222;
        gap: calc(4rem * var(--scale));
        font-family: 'Rubik Variable', sans-serif;

    }
    .logo{
        width: calc(18rem * var(--scale));
        height: calc(18rem * var(--scale));
        margin-right: calc(10rem * var(--scale));
    }
	.image{
        width: 100%;
        height: 100%;
    }
</style>
