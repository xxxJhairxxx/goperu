---
import "@fontsource-variable/rubik";
import Container from "../globals/Container.astro";
---

<Container>
  <button class="btn lg:!hidden"><span></span><span></span><span></span></button
  >
  <nav class="Navbar">
    <div class="logo">
      <img
        class="image"
        src="/images/tnlogo.png"
        alt=""
      />
    </div>
    <ul class="menu">
      <a href="/"><li>HOME</li></a>
      <a href="/acerca-de-julio-tovar"><li>ACERCA DE JULIO TOVAR</li></a>
      <a><li>EQUIPO</li></a>
      <a><li>IDEOLOGÍA</li></a>
      <a><li>NUESTRAS IDEAS</li></a>
      <a><li>SÚMATE</li></a>
      <a><li>CONTÁCTANOS</li></a>
    </ul>
  </nav>
</Container>

<script>
  const btn = document.querySelector(".btn");
  btn &&
    btn.addEventListener("click", () => {
      document.querySelector(".Navbar")?.classList.toggle("!translate-x-[0%]");
      document.querySelector("body")?.classList.toggle("overflow-y-hidden");
      const array: NodeListOf<Element> = document.querySelectorAll(".btn span");
      array.forEach((item: any) => item.classList.toggle("!bg-black"));
    });
</script>

<style>
  button {
    @apply w-[4.6rem] px-[1rem] h-[5rem] flex flex-col justify-center gap-3  absolute z-[550]  top-20 right-10;
  }
  span {
    @apply block h-[0.3rem] w-full bg-white  rounded-lg;
    transition: background-color 1s ease-in-out;
  }
  .Navbar {
    @apply fixed z-[450] flex flex-col  justify-center w-full h-full bg-white;
    transform: translateX(100%);
    transition: transform 0.7s ease-in-out;
    list-style: none;
  }

  .menu {
    @apply text-black font-[200] lowercase text-[1.8rem] w-full overflow-hidden;
    flex-direction: col;
    list-style: none;
    font-family: "Rubik Variable", sans-serif;
  }
  .menu::first-letter {
    @apply uppercase;
  }

  a,
  li {
    @apply my-1 px-16;
  }

  .logo {
    @apply mt-20;
    width: 16rem;
    height: 16rem;
  }

  @screen laptop {
    .Navbar {
      @apply absolute z-50 bg-transparent flex-row h-fit w-fit;
      list-style: none;
      padding: calc(0.1rem * var(--scale));
      padding-top: calc(5rem * var(--scale));
      display: flex;
      font-size: calc(1.2rem * var(--scale));
      justify-content: space-between;
      transform: translateX(0%);
    }
    .menu {
      display: flex;
      flex-direction: row;
      list-style: none;
      color: white;
      font-weight: 500;
      height: calc(4rem * var(--scale));
      width: calc(87rem * var(--scale));
      padding: 0 calc(2.5rem * var(--scale));
      font-family: "Rubik Variable", sans-serif;
      font-size: calc(1.5rem * var(--scale));
    }
    .logo {
      @apply mt-0;
      width: calc(18rem * var(--scale));
      height: calc(18rem * var(--scale));
      margin-right: calc(10rem * var(--scale));
    }
    .image {
      width: 100%;
      height: 100%;
    }

    a,
    li {
      @apply my-0 px-0;
    }

    a {
      @apply flex items-center;
      background-color: #222222;
      padding: calc(1.4rem * var(--scale)) calc(1.8rem * var(--scale));
      cursor: pointer;
      height: calc(4rem * var(--scale));
    }

    a:hover {
      @apply bg-black;
    }
  }
</style>
